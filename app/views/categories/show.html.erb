<h1 class = "text-center mt-4">Category : <%=@category.name %></h1>
<% if logged_in? && current_user%>
  <div class = "text-center mt-4">
    <%= link_to "Edit category", edit_category_path(@category),class:"btn btn-outline-info" %>
  </div>
<% end %>
 <h3 class = "text-center mt-3">Article</h3>
 <div class="flickr_pagination text-center">
    <%= will_paginate @articles, :container => false %>
  </div>
  <%= render 'articles/articles' %>
</div> 


