<div class: "page-content class= "text-center mt-4"">
  <h1><%=@user.username %>'s profile</h1>
  <%=gravatar_for @user, size: 200 %>
    <div class = "text-center mt-4">
    <% if logged_in? && @user == current_user %>
      <%= link_to "Edit profile", edit_user_path,class:"btn btn-outline-info" %>
    <% end %>
    </div>
  <h3 class = "mt-3">Article</h3>
  <%= render 'articles/articles' %>
</div>